{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "CSVTransferApp": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    },
    "File": {
      "Path": "./logs/app-.log",
      "Append": true,
      "MaxSizeInMB": 10,
      "MaxFiles": 5
    }
  },
  "DatabaseConnections": {
    "SqlServer": {
      "Provider": "Microsoft.Data.SqlClient",
      "ConnectionString": "Server=localhost,1433;Database=TestDB;User Id=sa;Password=${SQLSERVER_PASSWORD};TrustServerCertificate=true;",
      "ConnectionTimeout": 30,
      "CommandTimeout": 300,
      "MaxPoolSize": 50,
      "IsEnabled": true
    },
    "PostgreSQL": {
      "Provider": "Npgsql",
      "ConnectionString": "Host=localhost;Port=5432;Database=csvapp_db;Username=csvapp;Password=${POSTGRES_PASSWORD};",
      "ConnectionTimeout": 30,
      "CommandTimeout": 300,
      "MaxPoolSize": 50,
      "IsEnabled": true
    }
  },
  "SftpConnections": {
  "LocalSFTP": {
      "Host": "localhost",
      "Port": 2222,
      "Username": "csvapp",
  "Password": "${SFTP_PASSWORD}",
      "RemotePath": "/upload",
      "ConnectionTimeout": 15,
      "IsEnabled": true
    }
  },
  "Processing": {
    "MaxConcurrentConnections": 5,
    "MaxConcurrentFiles": 5,
    "MaxConcurrentJobs": 3,
    "RetryCount": 3,
    "RetryDelay": 2000,
    "HeaderOverridePath": "./config/header-overrides",
    "LogPath": "./logs"
  }
}
