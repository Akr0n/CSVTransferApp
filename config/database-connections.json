        "MaxPoolSize": 200,
        "IsEnabled": true
      }
    }
  },
  "CommonSettings": {
    "DefaultCommandTimeout": 300,
    "DefaultConnectionTimeout": 30,
    "EnableConnectionPooling": true,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  }
}
