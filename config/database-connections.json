{
  "ConnectionTemplates": {
    "Oracle": {
      "Provider": "Oracle.EntityFrameworkCore",
      "ConnectionStringTemplate": "Data Source={host}:{port}/{serviceName};User Id={username};Password={password};",
      "DefaultPort": 1521,
      "DefaultTimeout": 30,
      "SupportedFeatures": [
        "Transactions",
        "StoredProcedures",
        "BulkInsert",
        "AdvancedQueries"
      ]
    },
    "SqlServer": {
      "Provider": "Microsoft.EntityFrameworkCore.SqlServer",
      "ConnectionStringTemplate": "Server={host},{port};Database={database};User Id={username};Password={password};TrustServerCertificate=true;",
      "DefaultPort": 1433,
      "DefaultTimeout": 30,
      "SupportedFeatures": [
        "Transactions",
        "StoredProcedures",
        "BulkInsert",
        "AdvancedQueries",
        "WindowsFunctions"
      ]
    },
    "PostgreSQL": {
      "Provider": "Npgsql.EntityFrameworkCore.PostgreSQL",
      "ConnectionStringTemplate": "Host={host};Port={port};Database={database};Username={username};Password={password};",
      "DefaultPort": 5432,
      "DefaultTimeout": 30,
      "SupportedFeatures": [
        "Transactions",
        "StoredProcedures",
        "BulkInsert",
        "AdvancedQueries",
        "JsonSupport"
      ]
    }
  },
  "ConnectionProfiles": {
