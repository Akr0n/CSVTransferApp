{
  "ConnectionTemplates": {
    "SqlServer": {
      "Provider": "Microsoft.Data.SqlClient",
      "ConnectionStringTemplate": "Server={host},{port};Database={database};User Id={username};Password={password};TrustServerCertificate=true;",
      "DefaultPort": 1433,
      "DefaultTimeout": 30
    },
    "PostgreSQL": {
      "Provider": "Npgsql",
      "ConnectionStringTemplate": "Host={host};Port={port};Database={database};Username={username};Password={password};",
      "DefaultPort": 5432,
      "DefaultTimeout": 30
    }
  },
  "ConnectionProfiles": {
    "Local": {
      "SqlServer": {
        "Host": "localhost",
        "Port": 1433,
        "Database": "TestDB",
        "Username": "sa",
  "Password": "${SQLSERVER_PASSWORD}",
        "MaxPoolSize": 20,
        "IsEnabled": true
      },
      "PostgreSQL": {
        "Host": "localhost",
        "Port": 5432,
        "Database": "csvapp_db",
        "Username": "csvapp",
  "Password": "${POSTGRES_PASSWORD}",
        "MaxPoolSize": 20,
        "IsEnabled": true
      }
    }
  },
  "CommonSettings": {
    "DefaultCommandTimeout": 300,
    "DefaultConnectionTimeout": 30,
    "EnableConnectionPooling": true,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true
  }
}
