{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "CSVTransferApp": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    },
    "File": {
      "Path": "./logs/app-.log",
      "Append": true,
      "MaxSizeInMB": 10,
      "MaxFiles": 5
    }
  },
  "DatabaseConnections": {
    "Oracle": {
      "Provider": "Oracle.EntityFrameworkCore",
      "ConnectionString": "Data Source=localhost:1521/XE;User Id=csvapp;Password=localdev123;",
      "ConnectionTimeout": 30,
      "CommandTimeout": 300,
      "MaxPoolSize": 50,
      "IsEnabled": true
    },
    "SqlServer": {
      "Provider": "Microsoft.EntityFrameworkCore.SqlServer",
      "ConnectionString": "Server=localhost;Database=CsvTransfer;User Id=sa;Password=LocalDev123!;TrustServerCertificate=True;",
      "ConnectionTimeout": 30,
      "CommandTimeout": 300,
      "MaxPoolSize": 50,
      "IsEnabled": true
    },
    "PostgreSQL": {
      "Provider": "Npgsql.EntityFrameworkCore.PostgreSQL",
      "ConnectionString": "Host=localhost;Database=csvapp_db;Username=csvapp;Password=localdev123;",
      "ConnectionTimeout": 30,
      "CommandTimeout": 300,
      "MaxPoolSize": 50,
      "IsEnabled": true
    }
  },
  "SftpConnections": {
    "LocalServer": {
      "Host": "localhost",
      "Port": 2222,
      "Username": "csvapp",
      "Password": "localdev123",
      "RemotePath": "/upload",
      "IsEnabled": true
    }
  },
  "Processing": {
    "MaxConcurrentConnections": 10,
    "MaxConcurrentFiles": 5,
    "MaxConcurrentJobs": 3,
    "RetryAttempts": 3,
    "RetryDelayMs": 1000,
    "HeaderOverridePath": "./config/header-overrides",
    "LogPath": "./logs"
  },
  "Security": {
    "EncryptionKey": "local-dev-key-123",
    "EnableAuditLog": true
  }
}